<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--    不填写成员变量默认以默认构造方法创建对象-->
    <bean id="Apple0" class="com.fubuki.spring.s02.ioc.entity.Apple"></bean>
    <bean id="Apple1" class="com.fubuki.spring.s02.ioc.entity.Apple">
        <property name="title" value="红富士s0201"></property>
        <property name="origin" value="欧洲"></property>
        <property name="color" value="红色"></property>
    </bean>

    <!--    没有constructor-arg则代表调用默认构造方法实例化-->
    <bean id="Apple2" class="com.fubuki.spring.s02.ioc.entity.Apple">
        <constructor-arg name="title" value="红富士s0202"></constructor-arg>
        <constructor-arg name="origin" value="欧洲"></constructor-arg>
        <constructor-arg name="color" value="红色"></constructor-arg>
    </bean>

    <!--    利用构造方法参数位置实例化-->
    <bean id="Apple3" class="com.fubuki.spring.s02.ioc.entity.Apple">
        <constructor-arg index="0" value="红富士s0203"></constructor-arg>
        <constructor-arg index="2" value="欧洲"></constructor-arg>
        <constructor-arg index="1" value="红色"></constructor-arg>
    </bean>

    <!--    利用静态工厂获取对象-->
    <bean id="Apple4" class="com.fubuki.spring.s02.ioc.factory.AppleStaticFactory"
          factory-method="createSweetApple"/>

    <!--    利用工厂获取对象-->
    <bean id="factoryInstance"
          class="com.fubuki.spring.s02.ioc.factory.AppleFactoryInstance"/>
    <bean id="Apple5" factory-bean="factoryInstance"
          factory-method="createSweetApple"/>
</beans>