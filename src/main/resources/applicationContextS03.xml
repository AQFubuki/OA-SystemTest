                <entry key="dev-8822">
                    <bean class="com.fubuki.spring.s03.ioc.entity.Computer">
                        <constructor-arg name="brand" value="苹果"/>
                        <constructor-arg name="type" value="笔记本"/>
                        <constructor-arg name="sn" value="de2477"/>
